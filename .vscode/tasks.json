{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build all",
      "group": "build",
      "type": "shell",
      "command": "npm run build",
      "problemMatcher": {
        "base": "$tsc",
        "fileLocation": ["relative", "${workspaceRoot}"]
      }
    },
    {
      "label": "build server",
      "group": "build",
      "type": "shell",
      "command": "npm run build:server",
      "problemMatcher": {
        "base": "$tsc",
        "fileLocation": ["relative", "${workspaceRoot}"]
      }
    }
  ]
}
